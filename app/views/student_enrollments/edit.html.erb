<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Edit Batch</h4>
      <hr/>
    </div>
    <div class="content">
      <%= simple_form_for(@enrollment, student_enrollment_path) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= f.input :batch_id, collection: Batch.all, prompt: 'Please Select batch', input_html: { class: 'form-control' } %>
            <%= f.input :student_id, collection: Student.all, prompt: 'Please Select student', input_html: { class: 'form-control' } %>
          </div>
        </div>
        <%= f.button :submit, class: 'btn btn-primary btn-fill' %>
      <% end %>

    </div>
    <hr/>
    <div class="footer">
      <%= link_to batches_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to @batch, class: 'btn btn-info btn-fill' do %>
        <i class="fa fa-eye"></i>
        Show
      <% end %>
    </div>
    <br/>
  </div>
</div>
