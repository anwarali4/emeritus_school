<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-ribbon"></i>
        Listing Enrollent
      </h4>
      <hr/>
      <%= link_to new_enrollment_path, class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-plus-square"></i>
        Add Student in Batch
      <% end %>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Student</th>
            <th>Batch</th>
            <th>Course</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @enrollments.each do |enrollment| %>
            <tr>
              <td>
                <%= enrollment.student.name %>
              </td>
              <td>
                <%= enrollment.batch.name %>
              </td>
              <td>
                <%= enrollment.batch.course.name %>
              </td>
              <td>
                <%= link_to enrollment, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
                <% if enrollment.status == 'pending' %>
                  <%= link_to approve_and_reject_enrollment_path(id: enrollment.id, status: 'approve'), class: 'btn btn-primary btn-sm' do %>
                    <i class="fa fa-edit"></i>
                    Approve
                  <% end %>
                  <%= link_to approve_and_reject_enrollment_path(id: enrollment.id, status: 'reject'), method: :patch, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                    <i class="fa fa-trash"></i>
                    Reject
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
