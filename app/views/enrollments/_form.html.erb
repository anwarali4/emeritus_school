<%= simple_form_for(@enrollment) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= f.input :batch_id, collection: Batch.all, prompt: 'Please Select batch', input_html: { class: 'form-control' } %>
      <%= f.input :student_id, collection: Student.all, prompt: 'Please Select student', input_html: { class: 'form-control' } %>
    </div>
  </div>
  <%= f.button :submit, class: 'btn btn-primary btn-fill' %>
<% end %>
